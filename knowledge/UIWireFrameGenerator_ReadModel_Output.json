{
  "html": "<div style=\"font-family: 'Segoe UI', Arial, sans-serif; background: #f8f9fa; padding: 24px; border-radius: 8px; max-width: 100%; box-sizing: border-box;\">\n  <div style=\"margin-bottom: 20px;\">\n    <h2 style=\"margin: 0 0 8px 0; font-size: 1.25rem; font-weight: 600; color: #212529;\">도서 상세 조회</h2>\n  </div>\n  <form id=\"bookDetailsSearchForm\" style=\"display: flex; flex-wrap: wrap; gap: 12px; align-items: flex-end; background: #fff; padding: 16px; border-radius: 8px; border: 1px solid #dee2e6; margin-bottom: 20px;\">\n    <div style=\"display: flex; flex-direction: column; min-width: 180px;\">\n      <label for=\"bookId\" style=\"font-size: 0.95rem; color: #495057; margin-bottom: 4px;\">도서 ID</label>\n      <input type=\"text\" id=\"bookId\" name=\"bookId\" placeholder=\"도서 ID 입력\" style=\"padding: 8px; border: 1px solid #ced4da; border-radius: 4px; font-size: 1rem;\" />\n    </div>\n    <button type=\"submit\" style=\"background: #007bff; color: #fff; border: none; border-radius: 4px; padding: 8px 20px; font-size: 1rem; cursor: pointer; margin-left: 8px;\">조회</button>\n  </form>\n  <div style=\"background: #fff; border-radius: 8px; border: 1px solid #dee2e6; overflow-x: auto;\">\n    <table style=\"width: 100%; border-collapse: collapse; min-width: 800px;\">\n      <thead>\n        <tr style=\"background: #f1f3f5;\">\n          <th style=\"padding: 10px 8px; border-bottom: 1px solid #dee2e6; font-size: 0.98rem; color: #343a40; text-align: left;\">도서 ID</th>\n          <th style=\"padding: 10px 8px; border-bottom: 1px solid #dee2e6; font-size: 0.98rem; color: #343a40; text-align: left;\">도서 상세 정보</th>\n          <th style=\"padding: 10px 8px; border-bottom: 1px solid #dee2e6; font-size: 0.98rem; color: #343a40; text-align: left;\">상태</th>\n          <th style=\"padding: 10px 8px; border-bottom: 1px solid #dee2e6; font-size: 0.98rem; color: #343a40; text-align: left;\">등록일</th>\n          <th style=\"padding: 10px 8px; border-bottom: 1px solid #dee2e6; font-size: 0.98rem; color: #343a40; text-align: left;\">폐기일</th>\n          <th style=\"padding: 10px 8px; border-bottom: 1px solid #dee2e6; font-size: 0.98rem; color: #343a40; text-align: left;\">폐기 사유</th>\n          <th style=\"padding: 10px 8px; border-bottom: 1px solid #dee2e6; font-size: 0.98rem; color: #343a40; text-align: left;\">생성일</th>\n          <th style=\"padding: 10px 8px; border-bottom: 1px solid #dee2e6; font-size: 0.98rem; color: #343a40; text-align: left;\">수정일</th>\n        </tr>\n      </thead>\n      <tbody id=\"bookDetailsTableBody\">\n        <!-- 샘플 데이터 -->\n      </tbody>\n    </table>\n    <div id=\"noResults\" style=\"display: none; padding: 24px; text-align: center; color: #adb5bd; font-size: 1.05rem;\">검색 결과가 없습니다.</div>\n  </div>\n  <script>\n    // 샘플 데이터\n    const sampleData = [\n      {\n        bookId: 1001,\n        specification: '제목: 자바스크립트 완벽 가이드, 저자: David Flanagan, 출판사: 한빛미디어',\n        status: '대출 가능',\n        registrationDate: '2022-03-15',\n        disposalDate: '',\n        disposalReason: '',\n        createdAt: '2022-03-15',\n        updatedAt: '2022-06-01'\n      },\n      {\n        bookId: 1002,\n        specification: '제목: UX 디자인의 모든 것, 저자: 김유진, 출판사: 위키북스',\n        status: '대출 중',\n        registrationDate: '2021-11-10',\n        disposalDate: '',\n        disposalReason: '',\n        createdAt: '2021-11-10',\n        updatedAt: '2023-01-12'\n      },\n      {\n        bookId: 1003,\n        specification: '제목: 파이썬 데이터 분석, 저자: 박지훈, 출판사: 인사이트',\n        status: '폐기',\n        registrationDate: '2020-07-22',\n        disposalDate: '2023-02-15',\n        disposalReason: '파손',\n        createdAt: '2020-07-22',\n        updatedAt: '2023-02-15'\n      }\n    ];\n\n    function renderTable(data) {\n      const tbody = document.getElementById('bookDetailsTableBody');\n      const noResults = document.getElementById('noResults');\n      tbody.innerHTML = '';\n      if (!data.length) {\n        noResults.style.display = 'block';\n        return;\n      } else {\n        noResults.style.display = 'none';\n      }\n      data.forEach(row => {\n        const tr = document.createElement('tr');\n        tr.innerHTML = `\n          <td style='padding: 10px 8px; border-bottom: 1px solid #dee2e6;'>${row.bookId}</td>\n          <td style='padding: 10px 8px; border-bottom: 1px solid #dee2e6;'>${row.specification}</td>\n          <td style='padding: 10px 8px; border-bottom: 1px solid #dee2e6;'>${row.status}</td>\n          <td style='padding: 10px 8px; border-bottom: 1px solid #dee2e6;'>${row.registrationDate}</td>\n          <td style='padding: 10px 8px; border-bottom: 1px solid #dee2e6;'>${row.disposalDate || '-'}</td>\n          <td style='padding: 10px 8px; border-bottom: 1px solid #dee2e6;'>${row.disposalReason || '-'}</td>\n          <td style='padding: 10px 8px; border-bottom: 1px solid #dee2e6;'>${row.createdAt}</td>\n          <td style='padding: 10px 8px; border-bottom: 1px solid #dee2e6;'>${row.updatedAt}</td>\n        `;\n        tbody.appendChild(tr);\n      });\n    }\n\n    // 초기 렌더링\n    renderTable(sampleData);\n\n    // 검색 폼 이벤트\n    document.getElementById('bookDetailsSearchForm').addEventListener('submit', function(e) {\n      e.preventDefault();\n      const bookId = document.getElementById('bookId').value.trim();\n      let filtered = sampleData;\n      if (bookId) {\n        filtered = sampleData.filter(row => String(row.bookId).includes(bookId));\n      }\n      renderTable(filtered);\n    });\n  </script>\n</div>"
}