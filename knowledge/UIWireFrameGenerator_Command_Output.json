{
   "html": "<div style=\"max-width:600px;margin:0 auto;padding:24px;background:#fff;border-radius:8px;box-shadow:0 2px 8px rgba(0,0,0,0.04);font-family:'Pretendard',sans-serif;font-size:16px;\">\n  <div style=\"text-align:center;margin-bottom:24px;\">\n    <h2 style=\"margin:0 0 8px 0;font-size:1.5em;font-weight:600;\">도서 등록</h2>\n    <div style=\"color:#6c757d;font-size:1em;\">도서 정보를 입력하세요.</div>\n  </div>\n  <form id=\"registerBookForm\" autocomplete=\"off\" style=\"display:flex;flex-direction:column;gap:16px;\">\n    <div style=\"display:flex;flex-direction:column;\">\n      <label for=\"title\" style=\"margin-bottom:4px;font-weight:500;\">제목</label>\n      <input type=\"text\" id=\"title\" name=\"title\" placeholder=\"예: 클린 코드\" value=\"클린 코드\" style=\"padding:10px 12px;border:1px solid #ced4da;border-radius:4px;font-size:1em;\" required />\n    </div>\n    <div style=\"display:flex;flex-direction:column;\">\n      <label for=\"isbn\" style=\"margin-bottom:4px;font-weight:500;\">ISBN</label>\n      <input type=\"text\" id=\"isbn\" name=\"isbn\" placeholder=\"예: 9788966260959\" value=\"9788966260959\" style=\"padding:10px 12px;border:1px solid #ced4da;border-radius:4px;font-size:1em;\" required />\n    </div>\n    <div style=\"display:flex;flex-direction:column;\">\n      <label for=\"author\" style=\"margin-bottom:4px;font-weight:500;\">저자</label>\n      <input type=\"text\" id=\"author\" name=\"author\" placeholder=\"예: 로버트 C. 마틴\" value=\"로버트 C. 마틴\" style=\"padding:10px 12px;border:1px solid #ced4da;border-radius:4px;font-size:1em;\" required />\n    </div>\n    <div style=\"display:flex;flex-direction:column;\">\n      <label for=\"publisher\" style=\"margin-bottom:4px;font-weight:500;\">출판사</label>\n      <input type=\"text\" id=\"publisher\" name=\"publisher\" placeholder=\"예: 인사이트\" value=\"인사이트\" style=\"padding:10px 12px;border:1px solid #ced4da;border-radius:4px;font-size:1em;\" required />\n    </div>\n    <div style=\"display:flex;flex-direction:column;\">\n      <label for=\"category\" style=\"margin-bottom:4px;font-weight:500;\">카테고리</label>\n      <input type=\"text\" id=\"category\" name=\"category\" placeholder=\"예: 프로그래밍\" value=\"프로그래밍\" style=\"padding:10px 12px;border:1px solid #ced4da;border-radius:4px;font-size:1em;\" required />\n    </div>\n    <button type=\"submit\" style=\"margin-top:8px;background:#007bff;color:#fff;padding:12px 0;border:none;border-radius:4px;font-size:1em;font-weight:600;cursor:pointer;transition:background 0.2s;\">등록하기</button>\n  </form>\n  <script>\n    const form = document.getElementById('registerBookForm');\n    form.addEventListener('submit', function(e) {\n      e.preventDefault();\n      // 샘플 데이터로 성공 메시지 출력\n      form.style.display = 'none';\n      const successDiv = document.createElement('div');\n      successDiv.style.textAlign = 'center';\n      successDiv.style.marginTop = '32px';\n      successDiv.innerHTML = `\n        <div style='color:#28a745;font-size:2em;margin-bottom:12px;'>✔️</div>\n        <div style='font-size:1.2em;font-weight:500;margin-bottom:8px;'>도서가 성공적으로 등록되었습니다!</div>\n        <div style='color:#6c757d;font-size:1em;margin-bottom:24px;'>\n          제목: <b>${form.title.value}</b><br/>\n          ISBN: <b>${form.isbn.value}</b><br/>\n          저자: <b>${form.author.value}</b><br/>\n          출판사: <b>${form.publisher.value}</b><br/>\n          카테고리: <b>${form.category.value}</b>\n        </div>\n        <button id='registerAgainBtn' style='background:#6c757d;color:#fff;padding:10px 24px;border:none;border-radius:4px;font-size:1em;font-weight:500;cursor:pointer;'>다시 등록하기</button>\n      `;\n      form.parentNode.appendChild(successDiv);\n      document.getElementById('registerAgainBtn').onclick = function() {\n        successDiv.remove();\n        form.reset();\n        form.style.display = 'flex';\n      };\n    });\n  </script>\n</div>"
 }